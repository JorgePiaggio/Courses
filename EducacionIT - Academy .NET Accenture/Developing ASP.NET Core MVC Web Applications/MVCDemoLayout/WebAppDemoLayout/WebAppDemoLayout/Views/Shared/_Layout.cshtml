<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/main.css" rel="stylesheet" type="text/css" />
</head>
<body>

    <div class="header">
        <h1>Bienvenido al sitio</h1>
    </div>

    <div class="content">
        @RenderBody()
    </div>

    <div class="sidebar">
        @if (IsSectionDefined("Sidebar"))
        {
            @RenderSection("Sidebar")
        }
        else
        {
            <h3>Zona de prueba sidebar</h3>
        }
    </div>

    <div class="footer">
        <h3>info@sitio.com</h3>
        <h3>Galicia 1234, CDMX</h3>
    </div>


</body>
</html>
