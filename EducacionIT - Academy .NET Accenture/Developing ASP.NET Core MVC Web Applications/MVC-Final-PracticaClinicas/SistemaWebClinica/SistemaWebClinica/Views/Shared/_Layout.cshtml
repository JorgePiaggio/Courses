<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/style.css" rel="stylesheet" type="text/css" />
</head>
<body>

    <div class="header">
        <h1>Bienvenido a Web-Clinicas</h1>
        <nav>
            <ul>
                <li>@Html.ActionLink("Home", "Index")</li>
                <li>@Html.ActionLink("Agregar Medico", "Create")</li>
                @*<li>@Html.ActionLink("", "")<</li>
                    <li>@Html.ActionLink("", "")<</li>*@
            </ul>
        </nav>
    </div>

    <div class="sidebar">
        @if (IsSectionDefined("Sidebar"))
        {
            @RenderSection("Sidebar")
        }
        else
        {
            <h3>** Publicite aquí ** </h3>
        }
    </div>

    <div class="content">
        @RenderBody()
    </div>

    <div class="footer">
        <h3>info@webclinicas.com</h3>
        <h3>Galicia 1234, CDMX</h3>
    </div>


</body>
</html>